// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  MANAGER
  ADMIN
}

model User {
  id            String      @id @default(cuid())
  name          String?
  email         String?     @unique
  emailVerified DateTime?
  image         String?
  password      String
  role          Role        @default(USER)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  Penumpang     Penumpang[]

  @@index([id], map: "idx_user_id")
}


enum jenisKelamin {
  L
  P
}

enum golongan {
  I
  II
  III
  IVa
  IVb
  V
  VI
  VII
  VIII
  IX
}

model Penumpang {
  id             Int          @id @default(autoincrement()) @db.Integer
  nama           String       @db.VarChar(255)
  usia           Int          @db.SmallInt
  userId         String?
  jenisKelamin   jenisKelamin
  tujuan         String       @db.VarChar(255)
  tanggal        DateTime     @db.Timestamp(3)
  nopol          String       @db.VarChar(15)
  jenisKendaraan String       @db.VarChar(255)
  golongan       golongan
  kapal          String       @db.VarChar(50)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([nama, tujuan, nopol, kapal, jenisKendaraan], map: "idx_penumpang_nama_tujuan_nopol_kapal_jenisKendaraan")
  @@index([id], map: "idx_penumpang_id")
}
